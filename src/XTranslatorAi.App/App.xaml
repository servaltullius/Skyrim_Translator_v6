<Application x:Class="XTranslatorAi.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:XTranslatorAi.App"
             >
    <Application.Resources>
        <!-- Theme -->
        <Color x:Key="XT.AccentColor">#4B5563</Color>
        <Color x:Key="XT.WindowBackgroundColor">#F3F4F6</Color>
        <Color x:Key="XT.SurfaceColor">#FFFFFF</Color>
        <Color x:Key="XT.BorderColor">#D1D5DB</Color>
        <Color x:Key="XT.TextColor">#111827</Color>
        <Color x:Key="XT.MutedTextColor">#6B7280</Color>
        <Color x:Key="XT.HeaderColor">#E5E7EB</Color>

        <Color x:Key="XT.ControlHoverColor">#F3F4F6</Color>
        <Color x:Key="XT.ControlPressedColor">#E5E7EB</Color>

        <Color x:Key="XT.SuccessColor">#16A34A</Color>
        <Color x:Key="XT.SuccessHoverColor">#22C55E</Color>
        <Color x:Key="XT.SuccessPressedColor">#15803D</Color>

        <Color x:Key="XT.DangerColor">#DC2626</Color>
        <Color x:Key="XT.DangerHoverColor">#EF4444</Color>
        <Color x:Key="XT.DangerPressedColor">#B91C1C</Color>

        <SolidColorBrush x:Key="XT.AccentBrush" Color="{StaticResource XT.AccentColor}" />
        <SolidColorBrush x:Key="XT.AccentHoverBrush" Color="#374151" />
        <SolidColorBrush x:Key="XT.AccentPressedBrush" Color="#1F2937" />

        <SolidColorBrush x:Key="XT.WindowBackgroundBrush" Color="{StaticResource XT.WindowBackgroundColor}" />
        <SolidColorBrush x:Key="XT.SurfaceBrush" Color="{StaticResource XT.SurfaceColor}" />
        <SolidColorBrush x:Key="XT.BorderBrush" Color="{StaticResource XT.BorderColor}" />
        <SolidColorBrush x:Key="XT.TextBrush" Color="{StaticResource XT.TextColor}" />
        <SolidColorBrush x:Key="XT.MutedTextBrush" Color="{StaticResource XT.MutedTextColor}" />
        <SolidColorBrush x:Key="XT.HeaderBrush" Color="{StaticResource XT.HeaderColor}" />

        <SolidColorBrush x:Key="XT.ControlHoverBrush" Color="{StaticResource XT.ControlHoverColor}" />
        <SolidColorBrush x:Key="XT.ControlPressedBrush" Color="{StaticResource XT.ControlPressedColor}" />

        <SolidColorBrush x:Key="XT.SuccessBrush" Color="{StaticResource XT.SuccessColor}" />
        <SolidColorBrush x:Key="XT.SuccessHoverBrush" Color="{StaticResource XT.SuccessHoverColor}" />
        <SolidColorBrush x:Key="XT.SuccessPressedBrush" Color="{StaticResource XT.SuccessPressedColor}" />

        <SolidColorBrush x:Key="XT.DangerBrush" Color="{StaticResource XT.DangerColor}" />
        <SolidColorBrush x:Key="XT.DangerHoverBrush" Color="{StaticResource XT.DangerHoverColor}" />
        <SolidColorBrush x:Key="XT.DangerPressedBrush" Color="{StaticResource XT.DangerPressedColor}" />

        <SolidColorBrush x:Key="XT.AlternateRowBrush" Color="#F9FAFB" />

        <!-- Status row colors -->
        <SolidColorBrush x:Key="XT.Row.DoneBrush" Color="#E7F8ED" />
        <SolidColorBrush x:Key="XT.Row.DoneTmBrush" Color="#F3E8FF" />
        <SolidColorBrush x:Key="XT.Row.InProgressBrush" Color="#FFF7D6" />
        <SolidColorBrush x:Key="XT.Row.ErrorBrush" Color="#FFE6E6" />
        <SolidColorBrush x:Key="XT.Row.SkippedBrush" Color="#F1F5F9" />
        <SolidColorBrush x:Key="XT.Row.EditedBrush" Color="#E8F1FF" />

        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="{StaticResource XT.WindowBackgroundBrush}" />
            <Setter Property="Foreground" Value="{StaticResource XT.TextBrush}" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="XT.ToolbarButton" TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Margin" Value="0,0,6,0" />
            <Setter Property="Background" Value="{StaticResource XT.SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Foreground" Value="{StaticResource XT.TextBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource XT.ControlHoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource XT.ControlPressedBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="XT.PrimaryButton" TargetType="{x:Type Button}" BasedOn="{StaticResource XT.ToolbarButton}">
            <Setter Property="Background" Value="{StaticResource XT.AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.AccentBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource XT.AccentHoverBrush}" />
                                <Setter Property="BorderBrush" Value="{StaticResource XT.AccentHoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource XT.AccentPressedBrush}" />
                                <Setter Property="BorderBrush" Value="{StaticResource XT.AccentPressedBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="XT.ToolbarTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="0,0,6,0" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{StaticResource XT.SurfaceBrush}" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Foreground" Value="{StaticResource XT.TextBrush}" />
            <Setter Property="CaretBrush" Value="{StaticResource XT.TextBrush}" />
        </Style>

        <Style x:Key="XT.ToolbarPasswordBox" TargetType="{x:Type PasswordBox}">
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="0,0,6,0" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{StaticResource XT.SurfaceBrush}" />
            <Setter Property="Foreground" Value="{StaticResource XT.TextBrush}" />
            <Setter Property="CaretBrush" Value="{StaticResource XT.TextBrush}" />
        </Style>

        <Style x:Key="XT.ToolbarComboBox" TargetType="{x:Type ComboBox}">
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="0,0,6,0" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{StaticResource XT.SurfaceBrush}" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Foreground" Value="{StaticResource XT.TextBrush}" />
        </Style>

        <Style x:Key="XT.EditorTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{StaticResource XT.SurfaceBrush}" />
            <Setter Property="Foreground" Value="{StaticResource XT.TextBrush}" />
            <Setter Property="CaretBrush" Value="{StaticResource XT.TextBrush}" />
        </Style>

        <Style x:Key="XT.CardBorder" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{StaticResource XT.SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="12" />
        </Style>

        <Style x:Key="XT.GroupBoxCard" TargetType="{x:Type GroupBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupBox}">
                        <Border Background="{StaticResource XT.SurfaceBrush}"
                                BorderBrush="{StaticResource XT.BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="12">
                            <DockPanel LastChildFill="True">
                                <ContentPresenter ContentSource="Header"
                                                  DockPanel.Dock="Top"
                                                  Margin="0,0,0,10"
                                                  RecognizesAccessKey="True">
                                    <ContentPresenter.Resources>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="FontWeight" Value="SemiBold" />
                                            <Setter Property="Foreground" Value="{StaticResource XT.MutedTextBrush}" />
                                        </Style>
                                    </ContentPresenter.Resources>
                                </ContentPresenter>
                                <ContentPresenter />
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="XT.TabItem" TargetType="{x:Type TabItem}">
            <Setter Property="Padding" Value="14,8" />
            <Setter Property="Margin" Value="0,0,6,0" />
            <Setter Property="Foreground" Value="{StaticResource XT.TextBrush}" />
            <Setter Property="Background" Value="{StaticResource XT.HeaderBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10,10,0,0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource XT.SurfaceBrush}" />
                                <Setter TargetName="Bd" Property="BorderThickness" Value="1,1,1,0" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Trigger>
                            <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True" />
                                <Condition Property="IsSelected" Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource XT.ControlHoverBrush}" />
                        </MultiTrigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.45" />
                        </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="XT.DataGrid" TargetType="{x:Type DataGrid}">
            <Setter Property="BorderBrush" Value="{StaticResource XT.BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{StaticResource XT.SurfaceBrush}" />
            <Setter Property="Foreground" Value="{StaticResource XT.TextBrush}" />
            <Setter Property="RowBackground" Value="{StaticResource XT.SurfaceBrush}" />
            <Setter Property="AlternatingRowBackground" Value="{StaticResource XT.AlternateRowBrush}" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="RowHeaderWidth" Value="0" />
        </Style>

        <Style x:Key="XT.DataGridColumnHeader" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="{StaticResource XT.HeaderBrush}" />
            <Setter Property="Foreground" Value="{StaticResource XT.TextBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.BorderBrush}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <Style TargetType="{x:Type StatusBar}">
            <Setter Property="Background" Value="{StaticResource XT.HeaderBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{StaticResource XT.TextBrush}" />
        </Style>

        <Style x:Key="XT.ProgressBar" TargetType="{x:Type ProgressBar}">
            <Setter Property="Background" Value="{StaticResource XT.ControlPressedBrush}" />
            <Setter Property="Foreground" Value="{StaticResource XT.AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ProgressBar}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <Grid ClipToBounds="True">
                                <Rectangle x:Name="PART_Indicator"
                                           Fill="{TemplateBinding Foreground}"
                                           HorizontalAlignment="Stretch"
                                           RadiusX="4"
                                           RadiusY="4"
                                           RenderTransformOrigin="0,0.5">
                                    <Rectangle.RenderTransform>
                                        <!-- This template assumes Value is already a 0..1 ratio (we bind ProgressRatio with Maximum=1). -->
                                        <ScaleTransform ScaleX="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value}" />
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Setter TargetName="PART_Indicator" Property="Width" Value="0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="XT.SuccessButton" TargetType="{x:Type Button}" BasedOn="{StaticResource XT.ToolbarButton}">
            <Setter Property="Background" Value="{StaticResource XT.SuccessBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.SuccessBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource XT.SuccessHoverBrush}" />
                                <Setter Property="BorderBrush" Value="{StaticResource XT.SuccessHoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource XT.SuccessPressedBrush}" />
                                <Setter Property="BorderBrush" Value="{StaticResource XT.SuccessPressedBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="XT.DangerButton" TargetType="{x:Type Button}" BasedOn="{StaticResource XT.ToolbarButton}">
            <Setter Property="Background" Value="{StaticResource XT.DangerBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource XT.DangerBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource XT.DangerHoverBrush}" />
                                <Setter Property="BorderBrush" Value="{StaticResource XT.DangerHoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource XT.DangerPressedBrush}" />
                                <Setter Property="BorderBrush" Value="{StaticResource XT.DangerPressedBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
